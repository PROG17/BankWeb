@model Transaction

@{
    ViewData["Title"] = "Deposit / Withdraw";
}


<form method="post" class="mt-50">

    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
            <div class="form-group regform-item center-block">
                <label asp-for="AccountNumber" for="accountNumber" class="label label-primary"></label>
                <input asp-for="AccountNumber" type="text" class="form-control" id="accountNumber" />
            </div>
        </div>
        <div class="col-lg-2">
            <span class="red-text" asp-validation-for="AccountNumber"></span>
            <span class="red-text" asp-validation-for="Amount"></span>
        </div>
        <div class="col-lg-4">
            <div class="form-group regform-item center-block">
                <label asp-for="Amount" for="amount" class="label label-primary"></label>
                <input asp-for="Amount" type="text" class="form-control" id="amount" />
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>

    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-4">
            <div class="form-group regform-item center-block">
                <input asp-controller="Bank" asp-action="Deposit" type="submit" value="Deposit" class="form-control btn btn-primary" />
            </div>
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-4">
            <div class="form-group regform-item center-block">
                <input asp-controller="Bank" asp-action="Withdraw" type="submit" value="Withdraw" class="form-control btn btn-primary" />
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>

</form>